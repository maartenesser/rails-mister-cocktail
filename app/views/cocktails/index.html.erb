
<div class="container">
  <h1>Cocktails</h1>
  <br>
  <br>
    <%= link_to "create Cocktail", new_cocktail_path , class: "btn btn-outline-success"%>
  <br>
  <br>
  <br>
  <br>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-md-4">
          <div class="card" data-effect="zoom">
            <figure  class="card__image">
              <%= cl_image_tag cocktail.photo, crop: :fill %>
            </figure>
            <div class="card__header">
              <!-- change image link -->
              <figure class="card__profile">
                <%= cl_image_tag cocktail.photo, crop: :fill  %>
              </figure>
            </div>
            <div class="card__body">
              <h3 class="card__name">
                <%= link_to cocktail.name, cocktail %>
              </h3>
              <div class="card__bio">
                <ul>
                 <% cocktail.doses.each do |dose|%>
                    <li class="list-unstyled text-light">
                      âž• <%= dose.description %>
                      <%= dose.ingredient.name %>
                    </li>
                 <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
